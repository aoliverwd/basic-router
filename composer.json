{
    "name": "alexoliverwd/basic-router",
    "description": "A minimalistic yet powerful PHP class designed to handle routing in web applications.",
    "keywords": [
        "handlebars",
        "template",
        "html"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Oliver",
            "homepage": "https://github.com/aoliverwd/basic-router",
            "role": "Lead"
        }
    ],
    "support": {
        "issues": "https://github.com/aoliverwd/basic-router/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "pestphp/pest": "^3.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test" : [
            "./vendor/bin/phpstan analyse -c phpstan.neon",
            "@unit"
        ],
        "unit": [
            "./vendor/bin/pest"
        ]
    }
}
